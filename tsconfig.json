{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "constants/*": ["src/constants/*"],
      "store": ["src/store"],
      "store/*": ["src/store/*"],
      "utils/*": ["src/utils/*"],
      "*": ["node_modules/*"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
