{
  "name": "fusliez-notes",
  "productName": "fusliez-notes",
  "version": "1.0.0-beta.2",
  "description": "A companion notes app for Among Us social deduction game. Lets you track of your thoughts and your winning record, and includes a notepad and maps.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kedyn/fusliez-notes.git"
  },
  "main": ".webpack/main",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "predeploynext": "npm run build",
    "deploynext": "gh-pages -d dist -e ./next",
    "desktop": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint ./src/ --cache --fix --ext .ts,.tsx",
    "checkTranslations": "node ./tools/translations.js",
    "test": "jest --config ./jest.config.json --coverage",
    "test-watch": "npm run test -- --watch",
    "test-coverage": "npm run test -- --coverage --watchAll=false"
  },
  "homepage": "http://kedyn.github.io/fusliez-notes",
  "author": {
    "name": "Kedyn Macedonio",
    "email": "mkedyn@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/assets/images/app/favicon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fusliez-notes",
            "iconUrl": "https://kedyn.github.io/fusliez-notes/favicon.ico",
            "setupIcon": "./src/assets/images/app/favicon.ico",
            "noMsi": "false"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.electron.main.config.js",
            "renderer": {
              "config": "./webpack.electron.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/electron/index.html",
                  "js": "./src/electron/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/electron/renderer/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@reduxjs/toolkit": "^1.5.0",
    "browserslist": "^4.16.6",
    "classnames": "^2.2.6",
    "electron-overlay-window": "^1.0.4",
    "electron-squirrel-startup": "^1.0.0",
    "i18next": "^19.7.0",
    "i18next-browser-languagedetector": "^6.0.1",
    "i18next-http-backend": "^1.0.21",
    "jss-preset-default": "^10.4.0",
    "react": "^16.13.1",
    "react-circular-progressbar": "^2.0.3",
    "react-color": "^2.18.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.7.3",
    "react-jss": "^10.4.0",
    "react-redux": "^7.2.1",
    "react-sortablejs": "^6.0.0",
    "sortablejs": "^1.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-syntax-jsx": "^7.12.13",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@testing-library/dom": "^7.30.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.3",
    "@types/classnames": "^2.2.10",
    "@types/dom-screen-wake-lock": "^1.0.0",
    "@types/jest": "^26.0.20",
    "@types/normalize-jss": "^4.0.0",
    "@types/react": "^16.9.49",
    "@types/react-color": "^3.0.4",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/redux-mock-store": "^1.0.2",
    "@types/sortablejs": "^1.10.6",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "cross-env": "^7.0.2",
    "css-loader": "^5.2.4",
    "electron": "13.6.6",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.3",
    "fork-ts-checker-webpack-plugin": "^5.2.1",
    "gh-pages": "^3.1.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-canvas-mock": "^2.3.1",
    "jest-css-modules-transform": "^4.2.0",
    "jest-localstorage-mock": "^2.4.8",
    "jsdom": "^16.5.1",
    "lint-staged": "^10.3.0",
    "node-json-minify": "^1.0.0",
    "node-loader": "^1.0.3",
    "normalize-jss": "^4.0.0",
    "prettier": "^2.1.1",
    "redux-mock-store": "^1.5.4",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.2",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,md,html}": "prettier --write"
  },
  "browserslist": [
    "defaults"
  ]
}
